<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_wishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/iv_produk1"/>

            <TextView
                android:id="@+id/tv_nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/iv_foto"
                android:text="Nama Produk"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_merk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="14dp"
                android:text="Merk"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_nama_produk" />

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_merk"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="Harga"
                android:textColor="@color/blue_400"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_nama_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="14dp"
                android:text="Nama Toko"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_harga" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/iv_hapus"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_trash"
                    android:layout_weight="0.3"
                    android:background="@drawable/bg_pressed_center"/>

                <Button
                    android:id="@+id/btn_beli"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="Beli"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_weight="0.7"
                    android:background="@drawable/btn_2"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>